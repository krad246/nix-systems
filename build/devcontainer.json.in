{
    "name": "@image@",
    "image": "@image@",

    "workspaceMount": "source=${localWorkspaceFolder},target=${containerWorkspaceFolder},type=bind",
    "workspaceFolder": "/workdir",

    "containerUser": "root",

    "runArgs": [
        "--cidfile=${localEnv:CACHEDIR}/cidfile",
        "--platform=@platform@",

        // dmesg access
        "--cap-add=SYSLOG",

        // note: see https://docs.docker.com/engine/containers/resource_constraints/
        // specifically, --kernel-memory

        // allow the container unlimited swap (unlimited virtual memory)
        "--memory-swap=-1",

        // set a hard limit on the physical memory of the container
        "--kernel-memory=6G"
    ],

   "customizations": {
        "vscode": {
            "extensions": [
                "vscodevim.vim"
            ],
        }
    },
}
