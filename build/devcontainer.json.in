{
    "name": "@image@",
    "image": "@image@",

    "workspaceMount": "source=${localWorkspaceFolder},target=${containerWorkspaceFolder},type=bind",
    "workspaceFolder": "/workdir",

    "containerUser": "root",

    "runArgs": [
        "--cidfile=${localEnv:CACHEDIR}/cidfile",
        "--platform=@platform@"
    ],

   "customizations": {
        "vscode": {
            "extensions": [
                "vscodevim.vim"
            ],
        }
    },
}
