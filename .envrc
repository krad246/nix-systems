#!/usr/bin/env direnv

WATCHES=(
  $PWD/justfile

  $PWD/shell.nix
  $PWD/default.nix

  $PWD/build
  $PWD/build/*
)

strict_env
watch_file "${WATCHES[@]}"

use flake "$PWD" \
  --option experimental-features 'nix-command flakes' \
  --option accept-flake-config true \
  --option inputs-from "$PWD" \
  --option show-trace true \
  --option connect-timeout 30 \
  --option timeout 30 \
  --option max-silent-time 60
